{% extends 'base.html.twig' %}

{% block title %}Powiadomienia{% endblock %}

{% block body %}
    <div class="content">
        <div class="heading">
            Powiadomienia
        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Tytuł Powiadomienia</th>
                <th scope="col">Data wysłania</th>
            </tr>
            </thead>
            <tbody>
            {% for notification in app.user.notifications|sort|reverse %}
                <tr>
                    <td>{{ notification.title }}</td>
                    <td>{{ notification.createdAt | date('d/m/y, H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
